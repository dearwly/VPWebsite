@{
    ViewBag.Title = "UploadVideo";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .upload-container {
            max-width: 600px;
            margin: 50px auto;
            background: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .preview-container {
            margin-top: 20px;
        }

            .preview-container img {
                max-width: 100%;
                height: auto;
                border-radius: 8px;
            }

        .btn-upload {
            width: 100%;
            font-size: 16px;
            border: 1px solid #f67092; /* 边框颜色 */
            background: #fb7299; /* 背景颜色 */
            color: white; /* 文字颜色 */
            transition: all 0.3s ease; /* 添加平滑过渡 */
        }

            /* 悬停时的颜色变化 */
            .btn-upload:hover {
                border: 1px solid #d95070 !important; /* 使用 !important 确保优先级更高 */
                background: #f05578 !important; /* 悬停背景颜色 */
                color: white !important; /* 文字颜色保持白色 */
            }

            /* 按下时的颜色变化 */
            .btn-upload:active {
                border: 1px solid #a03a55 !important; /* 深红边框 */
                background: #c43e61 !important; /* 按下背景颜色 */
                color: white !important; /* 文字颜色保持白色 */
            }

            /* 禁用按钮时的颜色 */
            .btn-upload:disabled {
                border: 1px solid #fcc5cf; /* 边框为浅粉 */
                background: #fde6ea; /* 背景为浅粉白 */
                color: #aaa; /* 文字颜色灰色 */
            }

    </style>
</head>
<body>
    <div class="container">
        <div class="upload-container">
            <h2 class="text-center">上传视频</h2>
            <hr />
            @using (Html.BeginForm("UploadVideo", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="mb-3">
                    <label for="videoTitle" class="form-label">视频标题</label>
                    <input type="text" id="videoTitle" name="videoTitle" class="form-control" placeholder="请输入视频标题" required />
                </div>

                <div class="mb-3">
                    <label for="videoFile" class="form-label">选择视频文件</label>
                    <input type="file" id="videoFile" name="videoFile" class="form-control" accept="video/*" required />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-upload">上传视频</button>
                </div>
            }

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success mt-3">
                    <p>@ViewBag.Message</p>
                </div>
            }

            @if (ViewBag.thumbnailsTitle != null)
            {
                <div class="preview-container text-center">
                    <h5>视频缩略图预览:</h5>
                    <img src="~/Content/thumbnails/@ViewBag.thumbnailsName" alt="视频缩略图" />
                    <span>@ViewBag.thumbnailsTitle</span>
                </div>
            }
        </div>
    </div>

