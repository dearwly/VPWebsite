@{
    ViewBag.Title = "UploadVideo";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .upload-container {
            max-width: 600px;
            margin: 50px auto;
            background: #fff;
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .preview-container {
            margin-top: 20px;
        }

            .preview-container img {
                max-width: 100%;
                height: auto;
                border-radius: 8px;
            }

        .btn-upload {
            width: 100%;
            font-size: 16px;
            border: 1px solid #f67092; 
            background: #fb7299; 
            color: white; 
            transition: all 0.3s ease; 
        }

            .btn-upload:hover {
                border: 1px solid #d95070 !important; 
                background: #f05578 !important; 
                color: white !important; 
            }

            .btn-upload:active {
                border: 1px solid #a03a55 !important; 
                background: #c43e61 !important; 
                color: white !important; 
            }


            .btn-upload:disabled {
                border: 1px solid #fcc5cf; 
                background: #fde6ea; 
                color: #aaa; 
            }

    </style>
</head>
<body>
    <div class="container">
        <div class="upload-container">
            <h2 class="text-center">UploadVideo</h2>
            <hr />
            @using (Html.BeginForm("UploadVideo", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="mb-3">
                    <label for="videoTitle" class="form-label">Video Title</label>
                    <input type="text" id="videoTitle" name="videoTitle" class="form-control" placeholder="Please input Video Title." required />
                </div>

                <div class="mb-3">
                    <label for="videoFile" class="form-label">Choose video file</label>
                    <input type="file" id="videoFile" name="videoFile" class="form-control" accept="video/*" required />
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary btn-upload">Upload</button>
                </div>
            }

            @if (ViewBag.Message != null)
            {
                <div class="alert alert-success mt-3">
                    <p>@ViewBag.Message</p>
                </div>
            }

            @if (ViewBag.thumbnailsTitle != null)
            {
                <div class="preview-container text-center">
                    <h5>Video thumbnail preview:</h5>
                    <img src="~/Content/thumbnails/@ViewBag.thumbnailsName" alt="Video thumbnail" />
                    <span>@ViewBag.thumbnailsTitle</span>
                </div>
            }
        </div>
    </div>

</body>
</html>
