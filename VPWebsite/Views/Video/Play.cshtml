@using VPWebsite.Models
@model VideoView
@{
    ViewBag.Title = "播放视频 - " + Model.Video.VideoTitle;
}

<h2>@Model.Video.VideoTitle</h2>

<div style="display: flex; justify-content: center;">
    <video style="flex: 1; max-width: 100%; border: 1px solid #ccc; border-radius: 8px;" controls>
        <source src="@Url.Content("~/Content/videos/" + Model.Video.VideoName)" type="video/mp4">
        您的浏览器不支持播放该视频。
    </video>
</div>

<div style="text-align: center; margin-top: 20px;">
    <p><strong>发布者:</strong> @Model.UserName</p>
    <p><strong>发布时间:</strong> @Model.FormattedUploadTime</p>
</div>

<!-- 删除视频的按钮 -->
<form action="@Url.Action("DeleteVideo", new { videoId = Model.Video.Id })" method="post" onsubmit="return confirm('您确定要删除这个视频吗？');" style="text-align: center; margin-top: 20px;">
    <button type="submit" class="btn btn-danger">删除视频</button>
</form>

@if (ViewBag.Message != null)
{
    <div style="text-align: center; margin-top: 20px;">
        <p>@ViewBag.Message</p>
    </div>
}
