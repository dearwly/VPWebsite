@model VPWebsite.Models.User

@{
    ViewBag.Title = "注册与登录";
}

@Scripts.Render("~/bundles/loginjs")
@Styles.Render("~/Content/logincss")

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="pageChange.css" />
    <script src="pageChange.js"></script>
</head>
<body>
    <div class="login_register">
        <div class="control">
            <div class="item">
                <div class="active">登录</div><div>注册</div>
            </div>
            <div class="content">
                <!-- 登录表单 -->
                <div style="display: block;">
                    <h2>登录</h2>
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        <p>账号</p>
                        @Html.TextBoxFor(m => m.Username, new { placeholder = "username", required = "required" })
                        <p>密码</p>
                        @Html.PasswordFor(m => m.Password, new { placeholder = "password", required = "required" })
                        <br />
                        <button type="submit" class="LARbutton">登录</button>
                    }
                </div>
                <!-- 注册表单 -->
                <div>
                    <h2>注册</h2>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                    {
                        <p>用户名</p>
                        @Html.TextBoxFor(m => m.Username, new { placeholder = "username", required = "required" })
                        <p>密码</p>
                        @Html.PasswordFor(m => m.Password, new { placeholder = "password", required = "required" })
                        <br />
                        <button type="submit" class="LARbutton">注册</button>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
